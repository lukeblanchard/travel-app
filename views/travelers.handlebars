<div class="container-fluid">
    <h1>{{header}}</h1>
    <div class="container-fluid custom-column">
        <h2>Search Travelers</h2>
        <form class="form-group" role="search">
            <input id="fname" type="text" class="form-control" placeholder="First Name">
            <input id="lname" type="text" class="form-control" placeholder="Last Name">
            <input id="username" type="text" class="form-control" placeholder="Username">
            <button onclick="searchTravelers(event)" type="submit" class="btn btn-default">Search</button>
            <button onclick="browseTravelers(event)" class="btn btn-default">Browse All</button>
        </form>
    </div>
    <div class="container-fluid custom-column">
        <h2>Add New Traveler</h2>
        <small>* required fields</small>
        <form class="form-group" onsubmit="return checkTravelerValues()" action="/travelers" method="post">
            <input name="fname" type="text" class="form-control" placeholder="First Name">
            <input name="lname" id="lname_add" type="text" class="form-control" placeholder="*Last Name">
            <input name="username" id="username_add" type="text" class="form-control" placeholder="*Username">
            <button type="submit" class="btn btn-default">Add</button>
        </form>
    </div>
</div>
<div class="container-fluid"> 
    {{#if addOperation}} 
        {{#if recordExists}}
            <h3>Username Already Exists</h3>
        {{else}}
            <h3>Traveler Successfully Added</h3> 
        {{/if}}
    {{/if}}
</div>
