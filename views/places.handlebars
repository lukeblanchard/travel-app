<div class="container-fluid">
    <h1>{{header}}</h1>
    <div class="container-fluid custom-column">
        <h2>Search Places</h2>
        <form class="form-group" role="search">
            <input id="city" type="text" class="form-control" placeholder="City">
            <input id="country" type="text" class="form-control" placeholder="Country">
            <button onclick="searchPlaces(event)" type="submit" class="btn btn-default">Search</button>
            <button onclick="browsePlaces(event)" class="btn btn-default">Browse All</button>
        </form>
    </div>
    <div class="container-fluid custom-column">
        <h2>Add New Place</h2>
        <small>* required fields</small>
        <form class="form-group" onsubmit="return checkPlaceValues()" role="search" action="/places" method="post">
            <input type="text" id="city_add" name="city" class="form-control" placeholder="*City">
            <input type="text" id="country_add" name="country" class="form-control" placeholder="*Country">
            <button type="submit" class="btn btn-default">Add</button>
        </form>
    </div>
</div>
<div class="container-fluid"> 
    {{#if addOperation}} 
        {{#if recordExists}}
            <h3>Place Already Exists</h3>
        {{else}}
            <h3>Place Successfully Added</h3> 
        {{/if}}
    {{/if}}
</div>
